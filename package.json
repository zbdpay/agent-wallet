{
  "name": "@zbdpay/agent-wallet",
  "version": "1.0.2",
  "description": "CLI wallet and command router for ZBD agent payments",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zbdpay/agent-wallet.git"
  },
  "bugs": {
    "url": "https://github.com/zbdpay/agent-wallet/issues"
  },
  "homepage": "https://github.com/zbdpay/agent-wallet#readme",
  "keywords": [
    "zbd",
    "wallet",
    "lightning",
    "cli"
  ],
  "type": "module",
  "bin": {
    "zbdw": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist",
    "lint": "npm run typecheck",
    "release": "semantic-release",
    "release:dry-run": "SEMANTIC_RELEASE_DRY_RUN=true semantic-release --dry-run --no-ci",
    "test": "npm run build && node --test test/**/*.test.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@zbdpay/agent-fetch": "^1.0.2",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "@semantic-release/npm": "^13.1.4",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/node": "^22.13.10",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "semantic-release": "^25.0.3",
    "typescript": "^5.8.2"
  }
}
